<%- include('header', {title: 'The Blog', cssFile: 'view-posts-css.css'}) %>
<%- include('nav.ejs') %>

<div class="container">
    <div class="content-section">
        <% if (blogPosts.length > 0) { %>
            <% blogPosts.forEach (post => { %>
                <div class="card">
                    <h2> <%= post.title %> </h2>
                    <p> <%= post.content %> </p>
                </div>
           <% }); %>
           <% } else { %>
            <p> no posts available</p>
           <%} %>

    </div>
</div>

<%- include('footer.ejs') %>
